@{
}
@model IEnumerable<sistema_soportemp.Models.RepuestosEquipos> 

@{
    ViewData["Title"] = "Reporte Repuestos de Equipos";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <a class="btn btn-success" href="@Url.Action("ExportarRepuestosEquiposExcel", "Reportes")">Exportar a Excel</a>
    <a class="btn btn-danger" href="@Url.Action("ExportarRepuestosEquiposPdf", "Reportes")">Exportar a PDF</a>
    <thead>
        <tr>
            <th>Activo</th>
            <th>Codigo</th>                    
            <th>Marca</th>
            <th>Modelo</th>
            <th>Ubicación</th>
            <th>Repuesto</th>
            <th>Fecha</th>
            <th>Comprado</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Activo.Nombre</td>
                <th>@item.Codigo</th>                             
                <td>@item.Marca.Nombre</td>
                <td>@item.Modelo.Nombre</td>
                <td>@item.Ubicacion.Nombre</td>
                <td>@item.Repuesto</td>
                <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@(item.Comprado ? "Sí" : "No")</td>
            </tr>
        }
    </tbody>
</table>
