@{
}
@if (User.Identity.IsAuthenticated)
{
    var userInitial = User.Identity.Name?.ToUpper().FirstOrDefault() ?? '?';

    <div class="header-controls">
        <div class="user-container">
            <div class="user-info">
                <div class="user-initial-circle">
                    @userInitial
                </div>
                <span class="user-name d-md-inline">@User.Identity.Name</span>
            </div>
        </div>
    </div>

}








