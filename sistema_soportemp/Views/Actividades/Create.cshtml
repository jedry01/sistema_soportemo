<!-- Views/Actividades/Create.cshtml -->
@model Actividades

<div class="container mt-4">
    <h2>Nueva Actividad</h2>

    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Titulo">Título</label>
            <input asp-for="Titulo" class="form-control" />
            <span asp-validation-for="Titulo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Fecha_programada">Fecha Programada</label>
            <input asp-for="Fecha_programada" type="datetime-local" class="form-control" />
            <span asp-validation-for="Fecha_programada" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="TrabajadorId">Técnico</label>
            <select asp-for="TrabajadorId" asp-items="ViewBag.Trabajadores" class="form-control">
                <option value="">Seleccione un técnico...</option>
            </select>
            <span asp-validation-for="TrabajadorId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="UbicacionId">Ubicación</label>
            <select asp-for="UbicacionId" asp-items="ViewBag.Ubicaciones" class="form-control">
                <option value="">Seleccione una ubicación...</option>
            </select>
            <span asp-validation-for="UbicacionId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Descripción</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

