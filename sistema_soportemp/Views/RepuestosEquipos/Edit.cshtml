@model RepuestosEquiposViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Repuesto</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Editar Repuesto</h1>

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <!-- Código -->
                <div class="col-md-5">
                    <label for="Codigo" class="form-label">Código</label>
                    <input type="text" class="form-control" id="Codigo" name="Codigo" asp-for="Codigo" required />
                </div>

                <!-- Marca -->
                <div class="col-md-5">
                    <label for="MarcaId" class="form-label">Marca</label>
                    <select class="form-select" id="MarcaId" name="MarcaId" asp-for="MarcaId" required>
                        <option value="">Selecciona una marca</option>
                        @foreach (var marca in Model.Marcas)
                        {
                            <option value="@marca.Id">@marca.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Modelo -->
                <div class="col-md-5">
                    <label for="ModeloId" class="form-label">Modelo</label>
                    <select class="form-select" id="ModeloId" name="ModeloId" asp-for="ModeloId" required>
                        <option value="">Selecciona un modelo</option>
                        @foreach (var modelo in Model.Modelos)
                        {
                            <option value="@modelo.Id">@modelo.Nombre</option>
                        }
                    </select>
                </div>

                <!-- Ubicación -->
                <div class="col-md-5">
                    <label for="UbicacionId" class="form-label">Ubicación</label>
                    <select class="form-select" id="UbicacionId" name="UbicacionId" asp-for="UbicacionId" required>
                        <option value="">Selecciona una ubicación</option>
                        @foreach (var ubicacion in Model.Ubicaciones)
                        {
                            <option value="@ubicacion.Id">@ubicacion.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Activo -->
                <div class="col-md-">
                    <label for="ActivoId" class="form-label">Activo</label>
                    <select class="form-select" id="ActivoId" name="ActivoId" asp-for="ActivoId" required>
                        <option value="">Selecciona un activo</option>
                        @foreach (var activo in Model.Activos)
                        {
                           <option value="@activo.Id">@activo.Nombre</option>
                        }
                    </select>
                </div>

                 <!-- Repuesto -->
                <div class="col-md-6">
                    <label for="Repuesto" class="form-label">Repuesto</label>
                    <textarea class="form-control" id="Repuesto" name="Repuesto" asp-for="Repuesto" rows="3"></textarea>
                </div>
            </div> 

            <div class="row mb-3">
                <!-- Fecha -->
                <div class="col-md-2">
                    <label for="Fecha" class="form-label">Fecha</label>
                    <input type="date" class="form-control" id="Fecha" name="Fecha" asp-for="Fecha" required />
                </div>

                <!-- Comprado -->
                <div class="col-md-2">
                   <label for="Comprado" class="form-label">Comprado</label>
                    @*<input type="checkbox" class="form-check-input" id="Comprado" name="Comprado" asp-for="Comprado" /> *@
                    <select asp-for="Comprado" class="form-select" id="Comprado" required>
                        <option value="false">No</option>
                        <option value="true">Sí</option>
                    </select>
                </div>
            </div>

            <div class="mb-2">
                <button type="submit" class="btn btn-primary">Actualizar</button>
                <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</body>
</html>

