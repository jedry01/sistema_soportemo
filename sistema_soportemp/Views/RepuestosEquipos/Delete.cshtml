@{
}
@model sistema_soportemp.Models.RepuestosEquipos

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Eliminar Repuesto</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">¿Estás seguro de que deseas eliminar este repuesto?</h1>

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Repuesto: @Model.Repuesto</h5>
                <p><strong>Código:</strong> @Model.Codigo</p>
                <p><strong>Marca:</strong> @Model.Marca.Nombre</p>
                <p><strong>Modelo:</strong> @Model.Modelo.Nombre</p>
                <p><strong>Ubicación:</strong> @Model.Ubicacion.Nombre</p>
                <p><strong>Fecha:</strong> @Model.Fecha.ToString("dd/MM/yyyy")</p>
                <p><strong>Comprado:</strong> @(Model.Comprado ? "Sí" : "No")</p>

                <div class="mt-4">
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                        @* @Html.AntiForgeryToken() *@
                        <input type="hidden" name="id" value="@Model.Id" />
                        <button type="submit" class="btn btn-danger">Eliminar</button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
                    </form> 

                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
