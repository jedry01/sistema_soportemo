@model ReparacionEquiposViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Equipo Reparado</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Editar Equipo Reparado</h1>
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="row mb-3">
                <!-- Código -->
                <div class="col-md-5">
                    <label for="Codigo" class="form-label">Código</label>
                    <input asp-for="Codigo" class="form-control" id="Codigo" required />
                </div>

                <!-- Marca -->
                <div class="col-md-5">
                    <label for="MarcaId" class="form-label">Marca</label>
                    <select asp-for="MarcaId" class="form-select" id="MarcaId" required>
                        <option value="">Selecciona una marca</option>
                        @foreach (var marca in Model.Marcas)
                        {
                            <option value="@marca.Id">@marca.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Modelo -->
                <div class="col-md-5">
                    <label for="ModeloId" class="form-label">Modelo</label>
                    <select asp-for="ModeloId" class="form-select" id="ModeloId" required>
                        <option value="">Selecciona un modelo</option>
                        @foreach (var modelo in Model.Modelos)
                        {
                            <option value="@modelo.Id">@modelo.Nombre</option>
                        }
                    </select>
                </div>
                <!-- Ubicación -->
                <div class="col-md-5">
                    <label for="UbicacionId" class="form-label">Ubicación</label>
                    <select asp-for="UbicacionId" class="form-select" id="UbicacionId" required>
                        <option value="">Selecciona una ubicación</option>
                        @foreach (var ubicacion in Model.Ubicaciones)
                        {
                            <option value="@ubicacion.Id">@ubicacion.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                <!-- Activo -->
                <div class="col-md-5">
                    <label for="ActivoId" class="form-label">Activo</label>
                    <select asp-for="ActivoId" class="form-select" id="ActivoId" required>
                        <option value="">Selecciona un activo</option>
                        @foreach (var activo in Model.Activos)
                        {
                            <option value="@activo.Id">@activo.Nombre</option>
                        }
                    </select>
                </div>

                <!-- Trabajador -->
                <div class="col-md-5">
                    <label for="TrabajadorId" class="form-label">Trabajador</label>
                    <select asp-for="TrabajadorId" class="form-select" id="TrabajadorId" required>
                        <option value="">Selecciona un trabajador</option>
                        @foreach (var trabajador in Model.Trabajadores)
                        {
                            <option value="@trabajador.Id">@trabajador.Nombre</option>
                        }
                    </select>
                </div>
                
            </div>

            <div class="row mb-3">
                <!-- Trabajo Realizado -->
                <div class="col-md-5">
                    <label for="TrabajoRealizado" class="form-label">Trabajo Realizado</label>
                    <textarea asp-for="TrabajoRealizado" class="form-control" rows="3"></textarea>
                </div>
                <!-- Observaciones -->
                <div class="col-md-5">
                    <label for="Observaciones" class="form-label">Observaciones</label>
                    <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                </div>
            </div>
           
            <div class="row mb-3">
                <!-- Fecha -->
                    <div class="col-md-2">
                        <label for="Fecha" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="Fecha" name="Fecha" required />
                    </div>
                <!-- Entregado -->
                <div class="col-md-2">
                    <label for="Entregado" class="form-label">Entregado</label>
                    @* <input type="checkbox" class="form-check-input" id="Entregado" name="Entregado" asp-for="Entregado" /> *@
                    <select asp-for="Entregado" class="form-select" id="Entregado" required>
                        <option value="true" >Sí</option>
                        <option value="false">No</option>
                    </select> 
                </div>
            </div>
            
                <!-- Botones -->
                <div class="d-flex justify-content-end">
                    <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
        
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>


