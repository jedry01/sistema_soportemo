@model ReparacionEquiposViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Nuevo Equipo Reparado</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4">Crear Nuevo Equipo Reparado</h1>

        <!-- Formulario -->
        <form asp-action="Create" method="post">
            <div class="row mb-3">
                <!-- Código -->
                <div class="col-md-6">
                    <label for="Codigo" class="form-label">Código</label>
                    <input type="text" class="form-control" id="Codigo" name="Codigo" required />
                </div>

                <!-- Marca -->
                <div class="col-md-6">
                    <label for="MarcaId" class="form-label">Marca</label>
                    <select class="form-select" id="MarcaId" name="MarcaId" required>
                        <option value="">Selecciona una marca</option>
                        @foreach (var marca in Model.Marcas)
                        {
                            <option value="@marca.Id">@marca.Nombre</option>
                        }
                    </select>
                </div>

            <div class="row mb-3">
                    <!-- Modelo -->
                    <div class="col-md-6">
                        <label for="ModeloId" class="form-label">Modelo</label>
                        <select class="form-select" id="ModeloId" name="ModeloId" required>
                            <option value="">Selecciona un modelo</option>
                            @foreach (var modelo in Model.Modelos)
                            {
                                <option value="@modelo.Id">@modelo.Nombre</option>
                            }
                        </select>
                    </div>

                <!-- Ubicación -->
                <div class="col-md-6">
                    <label for="UbicacionId" class="form-label">Ubicación</label>
                    <select class="form-select" id="UbicacionId" name="UbicacionId" required>
                        <option value="">Selecciona una ubicación</option>
                        @foreach (var ubicacion in Model.Ubicaciones)
                        {
                            <option value="@ubicacion.Id">@ubicacion.Nombre</option>
                        }
                    </select>
                </div>
            </div>

            <div class="row mb-3">
                    <!-- Activo -->
                    <div class="col-md-6">
                        <label for="ActivoId" class="form-label">Activo</label>
                        <select class="form-select" id="ActivoId" name="ActivoId" required>
                            <option value="">Selecciona un activo</option>
                            @foreach (var activo in Model.Activos)
                            {
                                <option value="@activo.Id">@activo.Nombre</option>
                            }
                        </select>
                    </div>

                    <!-- Trabajador -->
                    <div class="col-md-6">
                        <label for="TrabajadorId" class="form-label">Trabajador</label>
                        <select class="form-select" id="TrabajadorId" name="TrabajadorId" required>
                            <option value="">Selecciona un trabajador</option>
                            @foreach (var trabajador in Model.Trabajadores)
                            {
                                <option value="@trabajador.Id">@trabajador.Nombre</option>
                            }
                        </select>
                    </div>
            </div>

            <div class="row mb-3">
                <!-- Trabajo Realizado -->
                <div class="col-md-6">
                    <label for="TrabajoRealizado" class="form-label">Trabajo Realizado</label>
                    <textarea class="form-control" id="TrabajoRealizado" name="TrabajoRealizado" rows="3"></textarea>
                </div>        
            </div>

            <div class="row mb-3">

                    <!-- Fecha -->
                    <div class="col-md-2">
                        <label for="Fecha" class="form-label">Fecha</label>
                        <input type="date" class="form-control" id="Fecha" name="Fecha" required />
                    </div>

                    <!-- Entregado -->
                    <div class="col-md-2">   
                        <label for="Entrgado" class="form-label">Entregado</label>
                        <select asp-for="Entregado" class="form-select" id="Entregado" required>
                        <option value="false">No</option>
                        <option value="true" >Sí</option>              
                    </select>  
                    </div>
            </div>
            
                    <!-- Botones -->
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" class="btn btn-secondary me-2">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </div>
           
            
        </form>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/equipmentForm.js"></script>
</body>
</html>
